%a.dropdown-toggle.lead.small{href: "#", "data-toggle": "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"}
  = @presenter.sort_title
  %i.fa.fa-angle-down.dropdown-icon.pull-right
- if @presenter.category
  = render 'category_sort_list'
- else
  %ul.dropdown-menu
    %li
      = link_to I18n.t('title_asc'), books_path(sort: 'title asc')
    %li
      = link_to I18n.t('title_desc'), books_path(sort: 'title desc')
    %li
      = link_to I18n.t('price_asc'), books_path(sort: 'price asc')
    %li
      = link_to I18n.t('price_desc'), books_path(sort: 'price desc')
    %li
      = link_to I18n.t('newest_first'), books_path(sort: 'created_at desc')
    %li
      = link_to I18n.t('popular_first'), books_path(sort: 'popular desc')