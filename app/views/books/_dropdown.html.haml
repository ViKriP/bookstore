%a.dropdown-toggle.lead.small{href: "#", "data-toggle": "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"}
  = @books_index.sort_title
  %i.fa.fa-angle-down.dropdown-icon.pull-right
- if @books_index.category
  = render 'category_sort_list'
- else
  %ul.dropdown-menu
    %li
      = link_to I18n.t('title_asc'), books_path(sort: 'title_asc')
    %li
      = link_to I18n.t('title_desc'), books_path(sort: 'title_desc')
    %li
      = link_to I18n.t('price_asc'), books_path(sort: 'price_asc')
    %li
      = link_to I18n.t('price_desc'), books_path(sort: 'price_desc')
    %li
      = link_to I18n.t('newest_first'), books_path(sort: 'date_asc')
    %li
      = link_to I18n.t('popular_first'), books_path(sort: 'popular')