%main.container
  %h1.general-title-margin= I18n.t('catalog')
  .hidden-xs.clearfix
    .dropdowns.pull-right
      .dropdown.width-240
        = render 'dropdown'
    = render 'categories_list'
  .dropdowns.mb-25.visible-xs
    %p.lead.small.mb-10= I18n.t('filter_by')
    .dropdown
      %a.dropdown-toggle.lead.small{href: "#", "data-toggle": "dropdown", role: "button", "aria-haspopup": "true", "aria-expanded": "false"}
        All
        %i.fa.fa-angle-down.dropdown-icon.pull-right
      %ul.dropdown-menu
        %li
          = link_to "All", books_path
        - @presenter.categories.find_each do |category|
          %li
            = link_to category.title, category_books_path(category.id)
    %p.lead.small.mb-10= I18n.t('sort_by')
    .dropdown
      = render 'dropdown'
  = render 'books_section'