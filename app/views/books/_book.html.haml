- if @books.any?
  - books.each do |book|
    .col-sm-6.col-md-3
      .general-thumb-wrap
        .thumbnail.general-thumbnail
          - if book.images.any?
            = image_tag book.images.first.url, class: 'img-shadow general-thumbnail-img'
          - else
            = image_tag 'noimage.png', class: 'img-shadow general-thumbnail-img'
          .thumb-hover
            .general-thumb-link-wrap
              = link_to book, class: "thumb-hover-link" do
                %i.fa.fa-eye.thumb-icon{'aria-hidden': "true"}
              = form_for current_user_order.order_items.build, :html => {:class => 'thumb-hover-link'} do |f|
                = f.hidden_field :book_id, value: book.id
                = f.hidden_field :quantity, value: 1
                = f.button "", class: "btn btn-link" do
                  %i.fa.fa-shopping-cart.thumb-icon
      .mb-35
        .clearfix
          %p.pull-right.font-16.in-gold-500= book.decorate.book_price
          %p.title.mr-55= book.title.truncate(20)
        %span.divider-sm
        %p.lead.small
          = book.decorate.book_authors
- else
  .jumbotron.text-center.mb-0
  %p= I18n.t('no_books')