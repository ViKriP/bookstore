%main.container.general-main-wrap
  %h1.general-title-margin= t('checkout')
  = render 'steps'
  .text-center.mb-40
    %h3.general-subtitle= t('complete.thank_you')
    %p.fw-300= t('complete.info_sent_to', email: current_user.email)
  .row.mb-20
    .col-sm-6
      .visible-xs
        %p.general-order-number.mb-0= @order.track_number
        %p.general-address.mb-30= @order.decorate.order_date
      %p.general-address
        = @order.shipping_address.decorate.full_name
        %br
        = @order.shipping_address.address
        %br
        = @order.shipping_address.zip
        %br
        = @order.shipping_address.country_name
        %br
        = t('phone')
        = @order.shipping_address.phone
    .col-sm-6.hidden-xs.text-right
      %p.general-order-number.mb-0
      = t('order')
      = @order.track_number
      %p.general-address.mb-30= @order.decorate.order_date
  = render 'orders/mobile_completed_order_items'
  = render 'orders/completed_order_items'
  .text-center.general-text-right
    %p.in-gold-500.font-18= t('order_summary')
    %table.general-summary-table.general-summary-table-right.general-text-right
      = render 'orders/order_summary'
  .text-center
    = link_to t('back_to_store'), books_path, class: "btn btn-default mb-20"