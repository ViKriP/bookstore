%main.container
  %h1.general-title-margin
    = t('settings_label')
  %ul.nav.clearfix.mb-20{role: "tablist"}
    %li.tab-item.active{role: "presentation"}
      %a.tab-link{href: "#address", 'aria-controls': "address", role: "tab", 'data-toggle': "tab"}
        = t('address_label')
    %li.tab-item{role: "presentation"}
      %a.tab-link{href: "#privacy", 'aria-controls': "privacy", role: "tab", 'data-toggle': "tab"}
        = t('privacy')
  .tab-content
    #address.tab-pane.fade.in.general-main-wrap.active{role: "tabpanel"}
      .hidden-xs.hidden-sm
        .row
          .col-md-5
            %h3.general-subtitle.mt-0
              = t('billing_address')
          .col-md-5.col-md-offset-1
            %h3.general-subtitle.mt-0
              = t('shipping_address')
      .row
        .col-md-5.mb-40
          = form_for current_user, url: address_settings_path, method: :patch do |f|
            = render 'settings/shared/form_address', f: f, address_type: :billing_address, address: current_user.billing_address, namespace: 'billing_address'
            .text-center.general-text-align
              = f.button 'Save', method: :put, class: "btn btn-default", name: "commit", value: "billing_address"
        .col-md-5.col-md-offset-1.mb-25
          = form_for current_user, url: address_settings_path, method: :patch do |f|
            = render 'settings/shared/form_address', f: f, address_type: :shipping_address, address: current_user.shipping_address, namespace: 'shipping_address'
            .text-center.general-text-align
              = f.button 'Save', method: :put, class: "btn btn-default", name: "commit", value: "shipping_address"
    #privacy.tab-pane.fade{role: "tabpanel"}
      .row.mb-60
        .col-sm-5
          = render partial: 'settings/shared/form_change_email'
          = render partial: 'settings/shared/form_change_name'
        .col-sm-5.col-sm-offset-1
          = render partial: 'settings/shared/form_change_password'
        .col-sm-12
          = render partial: 'settings/shared/form_remove_account'