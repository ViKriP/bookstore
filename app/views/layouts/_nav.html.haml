.hidden-xs
  %ul.nav.navbar-nav
    %li
      = link_to t('home'), root_path
    %li.dropdown
      %a.dropdown-toggle{href: "#", "data-toggle": "dropdown", role: "button", "aria-haspopup": "true", "aria-expanded": "false"}= t('shop')
      %ul.dropdown-menu
        - Category.find_each do |category|
          %li
            = link_to category.title, category_books_path(category.id)
    - if user_signed_in?
      %li
        %a.dropdown-toggle{href: "#", "data-toggle": "dropdown", role: "button", "aria-haspopup": "true", "aria-expanded": "false"} My Account
        %ul.dropdown-menu
          %li
            = link_to t('orders'), orders_path
          %li
            = link_to t('settings_label'), settings_path
          %li.divider{role: "separator"}
            %li
              = link_to t('logout'), destroy_user_session_path, method: :delete
    - else
      %li
        = link_to t('login'), new_user_session_path
      %li
        = link_to t('signup'), new_user_registration_path