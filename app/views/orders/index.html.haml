%main.container.general-main-wrap
  %h1.mt-0.mb-25= t('my_orders')
  %p.lead.small.mb-10.visible-xs= t('sort_by')
  = render 'dropdown'
  .visible-xs
    - if @filtered_orders.none?
      .jumbotron.text-center.mb-0
        %p= t('no_orders')
    - else
      = render partial: 'order_xs', collection: @filtered_orders.order(:created_at)
  .hidden-xs.mb-res-50
    - if @filtered_orders.none?
      .jumbotron.text-center.mb-0
        %p= t('no_orders')
    - else
      %table.table.table-hover
        %thead
          %tr
            %th
              %span.in-grey-600= t('number')
            %th
              %span.in-grey-600= t('completed_at')
            %th
              %span.in-grey-600= t('status')
            %th
              %span.in-grey-600= t('total')
        %tbody
          = render partial: 'order', collection: @filtered_orders.order(:created_at)