.dropdowns.dropdown.general-order-dropdown
  %a.dropdown-toggle.lead.small{href: "#", 'data-toggle': "dropdown", role: "button", 'aria-haspopup': "true", 'aria-expanded': "false"}
    = @filter_title
    %i.fa.fa-angle-down.dropdown-icon.pull-right
  %ul.dropdown-menu
    %li
      = link_to I18n.t('all_orders'), orders_path
    %li
      = link_to I18n.t('order_filters.waits'), orders_path(filter: :in_queue)
    %li
      = link_to I18n.t('order_filters.in_delivery'), orders_path(filter: :in_delivery)
    %li
      = link_to I18n.t('order_filters.delivered'), orders_path(filter: :delivered)
    %li
      = link_to I18n.t('order_filters.canceled'), orders_path(filter: :canceled)